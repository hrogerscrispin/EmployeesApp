@using EmployeesWebApp.Models.Entities;
@model Empleado

@{
    ViewData["Title"] = "Details";
}


<h1 class="text-center">Detalles</h1>

<div class="details-container" style="display: grid; grid-template-columns: 1fr 3fr; gap: 20px;">
    <div class="foto-container" style="margin-left:15px; margin-top:5px;margin-right:10px;">
       <img src="@("~/image/" + Model.Fotografia)" asp-append-version="true" width="370px" height="370px" />
    </div>

    <div class="info-container">
        <h4>Empleado</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
        </dt>
        <dd class = "col-sm-10">
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.FechaNacimiento)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.FechaNacimiento)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.FechaContratacion)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.FechaContratacion)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.CorreoElectronico)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.CorreoElectronico)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Estado.Descripcion)
        </dd>
        <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.Puesto)
        </dt>
        <dd class = "col-sm-10">
                @Html.DisplayFor(model => model.Puesto.Descripcion)
        </dd>
    </dl>

    </div>
    
</div>
<div class="text-center">
    <a asp-action="Edit" asp-route-id="@Model?.EmpleadoId" class="btn btn-primary">Editar</a> |
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</div>
